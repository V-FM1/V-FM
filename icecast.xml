<?xml version="1.0" encoding="utf-8"?>
<icecast>
    <location>Kenya</location>
    <admin>admin@v-fm.com</admin>

    <limits>
        <clients>100</clients>
        <sources>2</sources>
        <threadpool>5</threadpool>
        <queue-size>524288</queue-size>
        <client-timeout>30</client-timeout>
        <header-timeout>15</header-timeout>
        <source-timeout>10</source-timeout>
        <burst-on-connect>1</burst-on-connect>
        <burst-size>65535</burst-size>
    </limits>

    <authentication>
        <source-password>hackstream</source-password>
        <relay-password>hackstream</relay-password>
        <admin-user>admin</admin-user>
        <admin-password>hackstream</admin-password>
    </authentication>

    <hostname>localhost</hostname>

    <listen-socket>
        <port>8000</port>
    </listen-socket>

    <mount>
        <mount-name>/stream</mount-name>
        <password>hackstream</password>
    </mount>

    <!--
    <changeowner>
        <user>icecast</user>
        <group>icecast</group>
    </changeowner>
    -->

    <fileserve>1</fileserve>
    <paths>
        <basedir>/usr/share/icecast2</basedir>
        <webroot>/usr/share/icecast2/web</webroot>
        <adminroot>/usr/share/icecast2/admin</adminroot>
        <logdir>/var/log/icecast2</logdir>
        <pidfile>/tmp/icecast2.pid</pidfile>
    </paths>

    <logging>
        <accesslog>access.log</accesslog>
        <errorlog>error.log</errorlog>
        <loglevel>3</loglevel>
        <logsize>10000</logsize>
    </logging>
</icecast>
